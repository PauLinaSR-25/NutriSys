<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_opcion"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/TLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_500">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:icon="@drawable/ic_home"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/ejercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejercicio"
                android:icon="@drawable/ic_fitness"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receta"
                android:icon="@drawable/ic_eat"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/terapia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terapia"
                android:icon="@drawable/ic_psychology"/>
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPaper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>