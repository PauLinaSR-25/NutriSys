<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDepo"
    android:background="@color/white"
    android:layout_margin="5dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/tejercicio"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/nuevo"
                android:textColor="@color/blue_200"
                android:textSize="30sp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fuerza2"
                    android:textColor="@color/green2"
                    android:textSize="22sp"
                    android:layout_gravity="center"/>


                <ImageButton
                    android:id="@+id/btnagregfuerza"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_rounded"
                    android:contentDescription="@string/fuerza"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/fuerza"
                    tools:ignore="ImageContrastCheck" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardioestirar"
                android:textColor="@color/green2"
                android:textSize="22sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btncardioflexibilidad"
                android:layout_width="220dp"
                android:layout_height="170dp"
                android:layout_margin="7dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_rounded"
                android:contentDescription="@string/cardio"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cardioestirar"
                android:layout_gravity="center"/>
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>