<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controler.ejercicioDepo"
    android:background="@color/white"
    android:layout_margin="15sp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ejercicio"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nuevo"
                android:textColor="@color/green2"
                android:textSize="22sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btnadd"
                android:layout_width="250dp"
                android:layout_height="105dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_rounded"
                android:contentDescription="@string/google"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nuevo"
                android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editar"
            android:textColor="@color/green2"
            android:textSize="22sp"
            android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btneditar"
                android:layout_width="250dp"
                android:layout_height="105dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_rounded"
                android:contentDescription="@string/registra"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/registro"
                android:layout_gravity="center"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eliminar"
                android:textColor="@color/green2"
                android:textSize="22sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btneliminar"
                android:layout_width="250dp"
                android:layout_height="105dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_rounded"
                android:contentDescription="@string/registra"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/delete"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registro"
                android:textColor="@color/green2"
                android:textSize="22sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btnregistros"
                android:layout_width="250dp"
                android:layout_height="105dp"
                android:layout_margin="2dp"
                android:adjustViewBounds="true"
                android:background="@drawable/button_rounded"
                android:contentDescription="@string/registra"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/listar"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>